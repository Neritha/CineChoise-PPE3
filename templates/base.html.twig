<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CineChoice{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/cyborg/bootstrap.min.css">
        <script src="https://kit.fontawesome.com/7ac7855db0.js" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/7ac7855db0.js" crossorigin="anonymous"></script>

        {% block stylesheets %}{% endblock %}

    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">

            <a class="navbar-brand" href="{{path('accueil')}}"><img src="{{asset("images/logo/Logo CineChoice.png")}}" style="height: auto; width: 200px; display: block;" alt="Logo CineChoice"></a>
            

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-film="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
            
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('films')}}">Liste des Films</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('seances')}}">Liste des Séances</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('salles')}}">Liste des salles</a>
                    </li>


                    {% if app.user != null %}
                    {% if  app.user.roles[0] == "ROLE_ADMIN" %}
                        
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-wrench"></i> Administration</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{path('admin_salles')}}">Gestion des salles</a>
                            <!--<div class="dropdown-divider"></div>-->
                            <a class="dropdown-item" href="{{path('admin_films')}}">Gestion des films</a>
                            <a class="dropdown-item" href="{{path('admin_seances')}}">Gestion des séances</a>
                            <a class="dropdown-item" href="{{path('admin_category')}}">Gestion des categories</a>
                            <a class="dropdown-item" href="{{path('admin_user')}}">Liste des utilisateurs</a>
                        </div>
                    </li>

                    {% endif %}
                        
                    {% endif %}

                    
                </ul>

                <ul class="navbar-nav my-auto">

                    <li>
                        {% if app.user != null %}
                            <a href="{{path('app_logout')}}"><button type="button" class="btn btn-outline-secondary">Se déconnecter</button></a>
                            <a href="{{path('user')}}"><button type="button" class="btn btn-outline-secondary">Profil</button></a> 

                        {% else %}
                            <a href="{{path('app_login')}}"><button type="button" class="btn btn-outline-secondary">Se connecter</button></a>  
                            <a href="{{path('app_register')}}"><button type="button" class="btn btn-outline-secondary">S'inscrire</button></a>
                        

                            
                        {% endif %}
                    </li>

                </ul>





            </div>
        </nav>

        <div class="container text-center">  
        {#Affiche tout les messages flash#}
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{label}} mt-3">
                {% for message in messages %}
                    <p> {{message}} </p>
                {% endfor %}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
        </div>

        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js" integrity="sha384-+sLIOodYLS7CIrQpBjl+C7nPvqq+FbNUBDunl/OZv93DB7Ln/533i8e/mZXLi/P+" crossorigin="anonymous"></script>

        {% block javascripts %}{% endblock %}

    </body>
</html>
