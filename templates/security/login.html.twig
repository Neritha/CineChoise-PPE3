{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la page de connetion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectez en tent que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconecter</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
    <film for="inputEmail">Email</film>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <film for="inputPassword">Mot de passe</film>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
<p><a href=" {{path('app_forgot_password_request')}} ">Mot de passe oublié</a></p>
{% endblock %}
